<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_server"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBDFBC"
    android:orientation="vertical"
    android:padding="20dp">


    <Button
        android:id="@+id/connect_server"
        android:layout_width="383dp"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:background="#10DC18"
        android:drawableBottom="@android:drawable/ic_menu_set_as"
        android:onClick="onClick"
        android:text="CONNECT TO SERVER"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/go_to_browser"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:id="@+id/msgList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <Button
        android:id="@+id/go_to_browser"
        android:layout_width="391dp"
        android:layout_height="156dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:background="@android:color/holo_purple"
        android:onClick="onClick"
        android:text="GO TO BROWSER"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/white" />

</RelativeLayout>